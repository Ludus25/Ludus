{
    "Routes": [
        {
            "DownstreamPathTemplate": "/api/v1/xo-game",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5000
                }
            ],
            "UpstreamPathTemplate": "/xo-game",
            "UpstreamHttpMethod": [ "POST" ]
        },
        {
            "DownstreamPathTemplate": "/api/v1/xo-game/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5000
                }
            ],
            "UpstreamPathTemplate": "/xo-game/{everything}",
            "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
        },
        {
            "DownstreamPathTemplate": "/gamehub",
            "DownstreamScheme": "ws",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5000
                }
            ],
            "UpstreamPathTemplate": "/ws/gamehub",
            "UpstreamHttpMethod": [ "GET" ]
        }
    ],
    "GlobalConfiguration": {
        "BaseUrl": "http://localhost:8080",
        "RequestIdKey": "X-Request-Id"
    }
}
